@page
@model Taste.Pages.Admin.FoodType.UpsertModel

<form method="post">
    <div class="container">
        <div class="row border backgroundWhite" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 p-3">
                <h2 class="text-primary">@(Model.foodTypeObj.Id!= 0 ? "Update":"Create ") Food Type</h2>
            </div>
            <div class="col-8 p-3">
                <div class="row p-3 form-group">
                    <div class="col-3">
                        <label asp-for="foodTypeObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="foodTypeObj.Name" />
                        <span class="text-danger" asp-validation-for="foodTypeObj.Name"></span>
                    </div>
                </div>

                <div class="row p-3 form-group">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <a class="btn btn-primary form-control" asp-page="./Index">Back To List</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-success form-control">@(Model.foodTypeObj.Id!= 0 ? "Update":"Create ")</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
     @if (Model.foodTypeObj.Id != 0)
    {
        <input type="hidden" asp-for="foodTypeObj.Id" />
    }
</form>
